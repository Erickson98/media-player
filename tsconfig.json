{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "src/**/*",
    "src/components/Split.ts"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@models/*": [
        "src/models/*"
      ],
      "@/scripts/*": [
        "src/scripts/*"
      ]
    },
    "outDir": "public/scripts",
    "rootDir": "src/components",
    "verbatimModuleSyntax": true
  }
}