---
const { album, title } = Astro.props;
import PlayIcon from "../assets/icons/play.svg?url";
---

<div>
  <a href="/" target="_blank" rel="noopener noreferrer">{title}</a>
  <div class="container-for-albums-carrusel">
    {
      album.items.map((item) => (
        <div class="container-for-play" style="position: relative;">
          <button class="btn-album-go-to " data-album-id={item.id}>
            <div>
              <img
                class="img-album"
                src={item?.images[1]?.url}
                alt=""
                srcset=""
                width="153"
              />
              <div>{item?.name}</div>
              <span>{item?.artists?.map((a) => a.name).join(", ")}</span>
            </div>
          </button>
          <button
            class="btn-hidden playSong-Album-Carrousel"
            data-track-album={item.uri}
            data-track={JSON.stringify({
              id: item.id,
              uri: item.uri,
              name: item.name,
            })}
          >
            <img
              src={PlayIcon}
              alt="play icon"
              srcset=""
              data-state="play"
              class={`btn-hidden-pause-${item.id}`}
            />
          </button>
        </div>
      ))
    }
  </div>
</div>

<style>
  .img-album {
    border-radius: 5px;
  }
  .container-for-albums-carrusel {
    display: flex;
    gap: 27px;
  }
  .container-for-play:hover .btn-hidden {
    opacity: 1;
  }
  .btn-hidden {
    bottom: 15px;
    right: -15px;
    margin: 0px;
  }
</style>
