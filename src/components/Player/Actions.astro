---
import PlayingViewIcon from "src/assets/icons/playingView.svg?url";
import ProgresBar from "src/components/ProgresBar.astro";
import VolumeMax from "src/assets/icons/volumeMax.svg?url";
---

<div style="width: 30%; min-width: 210px;">
  <div class="container-actions">
    <button class="toggle" aria-label="icon for open right side panel"
      ><img src={PlayingViewIcon} alt="" srcset="" width="20" /></button
    >
    <button aria-label="volumen icon">
      <img src={VolumeMax} alt="" width="15" />
    </button>
    <ProgresBar />
  </div>
</div>

<style>
  .container-actions {
    display: flex;
    align-items: center;
    gap: 10px;
    width: 100%;
    justify-content: flex-end;
    min-width: 110px;
  }
  .progress-container {
    margin-bottom: 4px;
  }
</style>
