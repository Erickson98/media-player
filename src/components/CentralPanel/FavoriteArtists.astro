---
const { favoretieArtists } = Astro.props;
---

<div>
  <a href="/" target="_blank" rel="noopener noreferrer">You Might Like</a>
  <div class="container-for-albums-carrusel">
    {
      favoretieArtists.items.map((item) => (
        <>
          <div class="wrapper-for-img-your-favorite-artists">
            <img
              class="img-favorite-artists"
              src={item?.images[0].url}
              alt=""
              srcset=""
              width="153"
              height="153"
            />
            <div>{item?.name}</div>
          </div>
        </>
      ))
    }
  </div>
</div>

<style>
  .img-favorite-artists {
    border-radius: 50%;

    object-fit: cover;
  }
  .wrapper-for-img-your-favorite-artists {
    height: 100%;
  }
  .container-for-albums-carrusel {
    display: flex;
    gap: 27px;
  }
</style>
