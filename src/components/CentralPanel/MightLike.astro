---
const { album } = Astro.props;
import PlayIcon from "../../assets/icons/play.svg?url";
---

<div class="might-like">
  <button class="arrow left mightLikeLeft" aria-label="Anterior">‹</button>
  <button class="arrow right mightLikeRight" aria-label="Siguiente">›</button>

  <a href="/" target="_blank" rel="noopener noreferrer">You Might Like</a>
  <div class="container-for-albums-carrusel-might-like">
    {
      album.items.map(({ album }) => (
        <>
          <div class="container-for-play">
            <button class="btn-album-go-to" data-album-id={album.id}>
              <div>
                <img
                  class="img-album"
                  src={album?.images[0].url}
                  alt=""
                  srcset=""
                  width="153"
                />
                <div class="text-style">
                  <div class="album-name">{album?.name}</div>
                  <span class="album-artists">
                    {album?.artists?.map((a) => a.name).join(", ")}
                  </span>
                </div>
              </div>
            </button>
            <button
              class="btn-hidden playSong-Album-Carrousel"
              data-track-album={album.uri}
              data-track={JSON.stringify({
                id: album.id,
                uri: album.uri,
                name: album.name,
              })}
            >
              <img
                src={PlayIcon}
                alt="play icon"
                data-state="play"
                class={`btn-hidden-pause-${album.id}`}
              />
            </button>
          </div>
        </>
      ))
    }
  </div>
</div>
<style>
  .img-album {
    border-radius: 5px;
  }
  .container-for-albums-carrusel-might-like {
    display: flex;
    gap: 20px;
  }
  :root {
    --gap: 20px;
    --arrow-size: 40px;
  }

  .might-like {
    position: relative;
    padding: 16px 0;
  }

  .carousel-title {
    display: inline-block;
    margin: 0 0 12px 16px;
    /* font-weight: 600; */
    text-decoration: none;
  }

  /* Track del carrusel */
  .container-for-albums-carrusel-might-like {
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-padding-left: 16px;
    -webkit-overflow-scrolling: touch;
    padding: 0 16px;
    scrollbar-width: none;
  }
  .container-for-albums-carrusel-might-like::-webkit-scrollbar {
    display: none;
  }
  /* Flechas */
  .arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: var(--arrow-size);
    height: var(--arrow-size);
    border: 0;
    border-radius: 999px;
    background: rgba(0, 0, 0, 0.45);
    color: #fff;
    font-size: 1.6rem;
    line-height: 1;
    display: grid;
    place-items: center;
    cursor: pointer;
    z-index: 2;
  }
  .arrow.left {
    left: 4px;
  }
  .arrow.right {
    right: 4px;
  }
  .arrow[disabled] {
    opacity: 0.35;
    cursor: default;
  }
  .album-name {
    margin-top: 8px;
    font-weight: 600;
  }
  .album-artists {
    display: block;
    font-size: 0.9rem;
    opacity: 0.8;
  }
  .container-for-play {
    position: relative; /* para el botón superpuesto */
    /* flex: 0 0 auto; */
    width: clamp(140px, 22vw, 182px);
    scroll-snap-align: start;
    text-align: left;
  }
  .container-for-play:hover .btn-hidden {
    opacity: 1;
  }
  .btn-hidden {
    bottom: 15px;
    right: 0px;
    margin: 0px;
  }
</style>
