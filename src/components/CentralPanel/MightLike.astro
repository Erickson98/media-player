---
const { mightLike } = Astro.props;
---

<div>
  <a href="/" target="_blank" rel="noopener noreferrer">You Might Like</a>
  <div class="container-for-albums-carrusel">
    {
      mightLike.albums.map((item) => (
        <>
          <div>
            <img
              class="img-album"
              src={item?.images[0].url}
              alt=""
              srcset=""
              width="153"
            />
            <div>{item?.name}</div>
            {item?.artists?.map((a) => a.name).join(", ")}
          </div>
        </>
      ))
    }
  </div>
</div>

<style>
  .img-album {
    border-radius: 5px;
  }
  .container-for-albums-carrusel {
    display: flex;
    gap: 27px;
  }
</style>
